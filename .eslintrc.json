{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "settings": {
    "createClass": "createReactClass",
    "pragma": "React",
    "flowVersion": "0.53",
    "react": {
      "version": "detect"
    },
    "import/resolver": {
        "node": {
            "moduleDirectory": [
              "node_modules",
              "src"
            ]
        }
    }
  },
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
   },
  "plugins": [ "react" ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  }
}
